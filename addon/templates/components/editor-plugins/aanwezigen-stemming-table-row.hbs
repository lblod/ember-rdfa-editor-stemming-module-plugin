<td>
  {{#unless initAddPersoon}}
    {{row.persoon.gebruikteVoornaam}} {{row.persoon.achternaam}}
  {{else}}
    {{editor-plugins/select-new-persoon-stemmer bestuursorgaan=bestuursorgaan onSelect=(action "selectNewPersoon")}}
  {{/unless}}
</td>

<td>
  {{#unless initAddPersoon}}
    {{editor-plugins/mandataris-selector
      mandatarissen=row.mandatarissen
      mandataris=row.selectedMandataris
      onChange=(action "updateMandatarisAanwezige")}}
  {{/unless}}
</td>

<td>
  {{#unless initAddPersoon}}
    {{#wu-button-group}}
      {{#unless row.isAanwezigeStemmer}}
        {{#wu-link-button isSmall=true isNarrow=true onClick=(action "addStemmer")}}
          <i class="vi vi-plus vi-u-s"></i> Geef stemrecht
        {{/wu-link-button}}
      {{else}}
        {{#wu-link-button isWarning=true isSmall=true isNarrow=true onClick=(action "removeStemmer")}}
          <i class="vi vi-cross vi-u-s"></i> Verwijder stemrecht
        {{/wu-link-button}}
      {{/unless}}
      {{!-- Disabled to decrease complexity
      {{#wu-link-button isSmall=true isAlt=true isNarrow=true onClick=(action "removeAanwezige")}}
        <i class="vi vi-cross vi-u-s"></i> Verwijder als aanwezige
      {{/wu-link-button}} --}}
    {{/wu-button-group}}
  {{else}}
    {{#wu-button-group}}
      {{#if newPersoon}}
        {{#wu-link-button isSmall=true isNarrow=true onClick=(action "saveNewPersoon")}}
          <i class="vi vi-plus vi-u-s"></i> Bevestig aanwezige
        {{/wu-link-button}}
      {{/if}}
      {{#wu-link-button isSmall=true isAlt=true isNarrow=true onClick=(action "cancelAddPersoon")}}
        <i class="vi vi-cross vi-u-s"></i> Annuleer
      {{/wu-link-button}}
    {{/wu-button-group}}
  {{/unless}}

{{!-- 	{{#unless isSecret}}
		{{editor-plugins/stem-property-selector stemProperty=row.selectedStemBehaviour onSelect=(action "updateStembehaviour")}}
	{{/unless}} --}}
</td>
