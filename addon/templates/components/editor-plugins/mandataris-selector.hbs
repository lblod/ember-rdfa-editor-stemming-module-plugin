{{#if needsSelectbox}}
  {{#power-select
     options=mandatarissen
     allowClear=true
     renderInPlace=true
     selected=mandataris
     onchange=(action "select")
     as |mandataris|}}
    {{#if mandataris.bekleedt.0.bestuursfunctie.0.label}}
      {{mandataris.bekleedt.0.bestuursfunctie.0.label}}
    {{else}}
       Selecteer hoedanigheid
    {{/if}}
    {{#if mandataris.start}}
      ({{moment-format mandataris.start 'DD/MM/YYYY'}} - {{moment-format mandataris.einde 'DD/MM/YYYY'}})
    {{/if}}
  {{/power-select}}
{{else}}
  {{mandataris.bekleedt.0.bestuursfunctie.0.label}}
{{/if}}
